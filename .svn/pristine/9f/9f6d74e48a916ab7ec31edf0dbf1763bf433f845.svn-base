
.cont{
	padding: 15upx 22upx;
	box-sizing: border-box;
	// background: #f2f2f2;
	.item{
		background: #fff;
		border-radius: 10upx;
		padding: 18upx 18upx;
		box-sizing: border-box;
		margin-bottom:30upx;
		.shopName{font-size:22upx;color:#686868;padding:20upx 0}
		.shopInfo{width:100%;margin-top:30upx}
		.shopInfo-img{width:162upx;height:162upx;border-radius: 20upx;overflow: hidden;margin-right: 20upx;}
		.is-response{width:100%;height: 100%;}
		.shopInfo-introduce{justify-content:space-between;width:70%;}
		.detail{font-size:24upx;color:#333;flex:1;}
		.text-overflow_2-xzh{color: #333333;font-size: 26upx;margin: 8upx 0;}
		.detail .detailColor{color:#707070;font-size: 24upx;}
		.details{display: flex;justify-content: space-between;margin-top: 40upx;color: #333333;font-size: 26upx;}
		.num_price{
			text-align: right;
		}
		.real_num{color: #8e8e8e;font-size: 24upx;}
		.real_price{color: #333333;font-size: 28upx;margin-left: 20upx;}
		.xian{border: 1upx solid #f2f2f2;width: 110%;margin-left: -5%; height: 0;}
		.state_btn{
			display: flex;
			justify-content: space-between;
			align-items: center;
			padding-top: 30upx;
		}
		.btn_list{
			display: flex;	
			font-size: 24upx;
			.btn{
				font-size: 24upx;
				color: #4C4C4C;
				padding: 12upx 22upx;
				border: 1px solid #4C4C4C;
				border-radius: 10upx;
				margin-left: 14upx;
			}
			.isapply{
				border: 1px solid #d4d4d4;
				color: #d4d4d4;
			}
		}
		.state1{
			color:#808080;
			font-size: 24upx;
			display: flex;
			align-items: center;
			image{
				margin-right: 6upx;
				width: 27upx;
				height: 27upx;
			}
		}
		.state_jilu{
			overflow: hidden;
			margin-top: 26upx;
			>view{
				letter-spacing: 1px;
				float: right;
				color: #4C4C4C;
				font-size: 24upx;
			}
		}
	}
}