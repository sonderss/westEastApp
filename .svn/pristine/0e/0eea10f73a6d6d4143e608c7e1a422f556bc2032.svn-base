<script>
	// import uapi from "../../apis/user/user"
	import unipop from '../../components/uni-popup/uni-popup'
	import util from "../../common/util"
	import uapi from '../../apis/user/user'
    export default{
		components:{
			unipop
		},
		data(){
			return{
				image:'',
				userMsg1:{},
				userNickName:'',
				nickName:'',
				test_:0,
				isShowPlace:true,
				num:'60%',
				sign:'',
				placehold:'昵称',
				maxLength:15,
				
			}
		},
		onLoad(){
			uni.showLoading({
				title:"加载中"
			})
		},
		// computed:{  
		// 	...mapState(["userMsg"])
        // },
		mounted() {
			uni.hideLoading()
			this.userMsg1 = this.$store.state.userMsg
			this.userNickName = this.userMsg1.userName
			console.log('userMsg1::',this.userMsg1)
			this.sign = this.userMsg1.sign
			//获取全局用户状态
			
			this.image =this.userMsg1.headPic
			
		},
		methods:{
			change_image(){
				// console.log(123)
				let imgSrc = ''
				uni.chooseImage({
				    count: 1, //默认9
					sizeType: ['original', 'compressed'], //从相册选择
					sourceType: ['album'],
				    success:  (res)=> {
						// console.log(JSON.stringify(res.tempFilePaths));
						 const tempFilePaths = res.tempFilePaths;
						 this.image = tempFilePaths[0]
						// console.log('真机获取图片::', res.tempFilePaths)
						
						uni.uploadFile({
							url: 'http://192.168.1.140:5005/identity/FileManager/form',
							filePath:tempFilePaths[0],
							name: 'file',
							formData: {
							  	saveFile:'setUserInfo/'
							},
							success: (uploadFileRes) => {
								console.log(uploadFileRes)
								var data = JSON.parse(uploadFileRes.data)
								console.log(data)
								if(res.statusCode === 400){
									return ;
								}
								if(data.status === 0){
									imgSrc = data.data[0]
									imgSrc = imgSrc.replace(/[\\]/g,'')
									this.$store.state.userMsg.headPic = imgSrc
									// console.log('修改全局状态::',this.$store.state.userMsg)
								}else{
									uni.showToast({
										icon:'none',
										title:'上传失败',
										duration:2000
									})
								}
								let param = {
									Id:'0',
									HeadPic:imgSrc,
									UserName:this.userMsg1.userName,
									Sign:'-999'
								}
								uapi.setUserInfo(param,this);
							},
							complete:res=>{
								// console.log(res)
							}
						});

					},
					fail: err => {
						// console.log(err)
					}
				});
				
			},
			//获取焦点时修改
			isSetNickName(){
				this.placehold = '昵称'
				this.maxLength = 15
				this.$refs.dom.open()
			},
			isSetNickName1(){
				this.placehold = '签名'
				this.maxLength = 30
				this.$refs.dom.open()
			},
			cancel(){
				this.$refs.dom.close()
				
				this.nickName = ''
				this.isShowPlace = true
			},
			saveName(){
				// console.log(this.nickName)
				this.$refs.dom.close()
				if(this.placehold === '昵称'){
						var isImpty =  util.is_empty(this.nickName)
						if(isImpty){
							uni.showToast({
								icon:'none',
								title:'请输入您的昵称',
								duration:2000
							})
							return 
						}
						this.userNickName = this.nickName
						this.nickName = ''
						this.isShowPlace = true
						let param = {
							Id:'0',
							HeadPic:this.userMsg1.headPic,
							UserName:this.userNickName,
							Sign:'-999'
						}
						uapi.setUserInfo(param,this);
				}
				if(this.placehold === '签名'){
						var isImpty =  util.is_empty(this.nickName)
						if(isImpty){
							uni.showToast({
								icon:'none',
								title:'请输入您的昵称',
								duration:2000
							})
							return 
						}
						this.sign = this.nickName
						this.nickName = ''
						this.isShowPlace = true
						let param = {
							Id:'0',
							HeadPic:this.userMsg1.headPic,
							UserName:this.userMsg1.userName,
							Sign:this.sign
						}
						uapi.setUserInfo(param,this);
				}
				
				
			},
			getNickName(){
				// this.isShowPlace = false]
				this.num = '40%'
			},
			
			isValue(e){
				// console.log(e.detail.value)
				if(e.detail.value.length === 0){
					this.isShowPlace = true
				}else{
					this.isShowPlace = false
				}
			},
			numChange(e){
				this.num = e
			}
		}
	}
</script>

