				}
				this.tabCurrentIndex = index;
			}, 0);
			if(this.isFix){
				uni.pageScrollTo({
					scrollTop:this.ref_height,
					duration:0
				})
			}		
			this.page=1;
			this.start= 0;
			this.end= 0;		
			this.list= [];// 列表
			this.loading= true;
			// this.isReload= false;
			// this.count=1;
			if(this.tabBars[e].name=="全部"){
				data=data3
			}else{
				data=data2
			}
			uni.showLoading({
				title:'加载中',
				mask:true
			})
			setTimeout(()=>{
				uni.hideLoading();
			},1500)
			this.getList("change")
		},
		//获得元素的size
		getElSize(id) {
			return new Promise((res, rej) => {
				let el = uni.createSelectorQuery().select('#' + id);
				el.fields(
					{
						size: true,
						scrollOffset: true,
						rect: true
					},
					data => {
						res(data);
					}
				).exec();
			});
		},
		//轮播图切换修改背景色
		swiperChange(e) {
			const index = e.detail.current;
			this.titleNViewBackground = this.carouselList[index];
		},
		// 选中
		choose(item) {
			// item 返回选中 JSON 对象
			console.log(item);
			uni.navigateTo({
				url: '/pages/detail/goodsinfo?itemid='+item.id,
				success: res => {},
				fail: () => {},
				complete: () => {}
			})
		},
		toDesigner(){
			uni.navigateTo({
				url: '/pages/designer/designer',
				success: res => {},
				fail: () => {},
				complete: () => {}
			})
		},
		loaddata(){
			this.end = this.page * 10;
			this.list = this.list.concat(data.list.slice(this.start, this.end));
			this.start = this.end;
		},
		// 模拟加载数据
		getList(res) {
			if (this.list.length < data.list.length) {
				if(res){
					setTimeout(()=>{
						this.loaddata()
						uni.hideLoading();
						this.$nextTick(()=>{
							this.lazylode()
						})			
					},1500)		
				}else{
					if(this.page==1){
						this.loaddata()
					}else{
						setTimeout(()=>{
							this.loaddata()
							this.isShow=false				
						},1500)
					}
				}				
			} else {
				this.loading=false;
				this.isShow=false
			}
		},
		//测试跳转网页
		test3d(){
			uni.navigateTo({
				url:'/pages/auth/start/start'
			})
			
		}
	}
};
</script>
