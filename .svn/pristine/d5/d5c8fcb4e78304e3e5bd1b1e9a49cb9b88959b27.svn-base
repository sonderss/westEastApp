.content{
	padding-bottom:95upx;
}
.ximg {
	width: 163upx;
	height: 163upx;
	margin: 0 12upx;
	border-radius: 10upx;
}
.goods_flex {
	display: flex;
	align-items: center;
	justify-content: flex-start
}
.aa{
	div{
		border-radius: 50% !important;
	}
}
.goods_attribute{
	
	padding:0 20upx
}
.goods_title{
	width: 600upx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	font-size: 26upx;
	color:#525252;
	button{
		width: 140upx;
		font-size: 24upx;
		height: 40upx;
		line-height:40upx;
		white-space:nowrap;
		text{		
			margin-left:-6upx;
		}
	}
}
.goods_address{
	font-size:24upx;
	padding-top:20upx;
	color:#525252
}
.goods_price{
	font-size: 19upx;
	color:#acacac;
}
.cancel{
	overflow: hidden;
	margin-top:20upx;
	text{
		float: left;
		margin-top: 22upx;
	}
	button{
		float: right;
		vertical-align: bottom;
		.div{
			border-radius: 50%;
		}
	}
	
}
.select_all{
	text{
		vertical-align: -8upx;
	}
}
.footer_cancel{
	height: 50upx;
	width: 137upx;
	color:#fe0000;
	font-size:26upx;
	border:1px solid #fe0000;
	text-align: center;	
	line-height: 48upx;
	border-radius: 25upx;
}
.bottom{
	position:fixed;
	bottom:0;
	left:0;
	background: #ffffff;
	border-top:1px solid #dedede
}

.footer{
	width: 750upx;
	height:95upx;
	display:flex;
	justify-content: space-between;
	align-items:center;
	box-sizing: border-box;
	padding: 0 20upx;
}
.tip{
	text-align: center;
	line-height: 500upx;
	color:#585454
}